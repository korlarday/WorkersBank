
    <header id="header" class="full-header">

        <div id="header-wrap">

            <div class="container clearfix">

                <div id="primary-menu-trigger"><i class="icon-reorder"></i></div>

                <!-- Logo
            ============================================= -->
                <div id="logo">
                    <a href="index.html" class="standard-logo" data-dark-logo="@Url.Content("~/Content/User/images/logo-dark.png")"><img src="@Url.Content("~/Content/User/images/logo.png")" alt="Canvas Logo"></a>
                    <a href="index.html" class="retina-logo" data-dark-logo="@Url.Content("~/Content/User/images/logo-dark@2x.png")"><img src="@Url.Content("~/Content/User/images/logo@2x.png")" alt="Canvas Logo"></a>
                </div><!-- #logo end -->
                <!-- Primary Navigation
            ============================================= -->
                <nav id="primary-menu">

                    <ul>
                        <li>
                            <a href="@Url.Action("Index","Home")" @(ViewContext.RouteData.Values["action"].ToString().Equals("Index") ? "class=selected_nav" : "")><div>Home</div></a>
                        </li>
                        @if (!Request.IsAuthenticated)
                        {
                            <li>
                                <a href="@Url.Action("Login","Accounts")" @(ViewContext.RouteData.Values["action"].ToString().Equals("Login") ? "class=selected_nav" : "")><div>Log in</div></a>
                            </li>
                            <li>
                                <a href="#"><div>Register</div></a>
                                <ul>
                                    <li><a href="/Accounts/register-as-seeker"><div>Register As Job Seeker</div></a></li>
                                    <li><a href="/Accounts/register-as-hirer"><div>Register As Hirer</div></a></li>
                                </ul>
                            </li>
                        }
                        @if (Request.IsAuthenticated && User.IsInRole("Hirer"))
                        {
                            <li>
                                <a href="@Url.Action("create-job-slot","Applicants")" @(ViewContext.RouteData.Values["action"].ToString().Equals("create-job-slot") ? "class=selected_nav" : "")><div>Create Job Application</div></a>
                            </li>
                            <li>
                                <a href="@Url.Action("job-slots-created","Applicants")" @(ViewContext.RouteData.Values["action"].ToString().Equals("job-slots-created") ? "class=selected_nav" : "")><div>Job Application Created</div></a>
                            </li>
                        }
                        @if (Request.IsAuthenticated)
                        {
                            <li>
                                <a href="@Url.Action("job-posts","Applicants")" @(ViewContext.RouteData.Values["action"].ToString().Equals("job-posts") ? "class=selected_nav" : "")><div>Job Posts</div></a>
                            </li>
                            <li>
                                <a href="@Url.Action("my-profile","Accounts")" @(ViewContext.RouteData.Values["action"].ToString().Equals("my-profile") ? "class=selected_nav" : "")><div>My Profile</div></a>
                                <ul>
                                    <li><a href="/Accounts/Logout"><div>Logout</div></a></li>
                                </ul>
                            </li>
                        }
                        @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li>
                                @Html.ActionLink("Admin Area", "Index", "Dashboard", new { area = "Admin" }, null)
                            </li>
                        }

                    </ul>

                    <!-- Top Search
                    ============================================= -->
                    @*@if (Request.IsAuthenticated)
                    {
                        @Html.Action("UserNavPartial", "Account", new { area = "" })
                    }*@
                </nav><!-- #primary-menu end -->

            </div>

        </div>

    </header>